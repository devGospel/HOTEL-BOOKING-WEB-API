<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Booked suite</title>

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="css/dashboard.css">

	<link rel="shortcut icon" href="/assets/favicon.ico">
    <link rel="shortcut icon" type="x-icon" href="/assets/favicon.png">
    <link rel="apple-touch-icon"  href="/assets/favicon.png">
    <link rel="icon" sizes="192x192" href="/assets/favicon.png">

	
</head>
<body>

    
	<!-- SIDEBAR-->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bx-bed'></i>
			<span class="text">Suite details</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a href="#">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Suite booked</span>
				</a>
			</li>
			<li>
				<a href="#">  
					<i class='bx bxs-shopping-bag-alt' ></i>
				<span class="text">Other Suites</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text">Team</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">Message</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-group' ></i>
					<span class="text">Chat admin</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="#">
					<i class='bx bxs-cog' ></i>
					<span class="text">Settings</span>
				</a>
			</li>
			<form action="/logout" method="post">
				<li>
					<a href="/" class="logout">
						<i class='bx bxs-log-out-circle' ></i>
						<span class="text">Logout</span>
					</a>
				</li>
			</form>
		</ul>
	</section>
	<!-- SIDEBAR -->

 



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
            <a href="/bookings" class="notification" style=" margin-top: 15px;"  >
               	<!-- <span class="num"><!%= totalQty %></span> -->
			</a>
			<i class='bx bx-menu' ></i>
			
			<%- include('./partials/search'); -%>


			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>

	
		 
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN --> 
		<main>
			<div class="head-title">
				<div class="left">
					<h1> Booking date</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Suite(s) booked</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Duration</a>
						</li>
					</ul>
				</div>
				<a href="#" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">Download PDF</span>
				</a>
              
			</div>

            

			<ul class="box-info">

				<form action="/bookings" method="get">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3> From </h3>
						<input type="date" name="startDate" required>
                        
						<!-- <h3><!%=  new Date().toDateString();%></h3> -->
						<!-- <h4> <!%=   new Date().toLocaleTimeString()%></h4> -->
					</span>
				</li>
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3>To</h3>
						<input type="date" name="endDate" required>
					</span>
				</li>
				<!-- <li>
					<i class='bx bxs-dollar-circle' ></i>
					<span class="text">
						<!% products.forEach(item => { %>
						<h3>N<!%= item.price %></h3>
						<!% }) %>
						<p>Price</p>
					</span>
				</li> -->

                 <button type="submit" class="btnLogin-popup"> Pay</button>
			</form>
			
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3><b>Booked suites</b></h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>


                    <% if (products) { %>

					<table>
						<thead>
							<tr>
								<th> Room</th>
								<th> Name</th>
								<th> Room(s)</th>
								<th>Price</th>
							</tr>
						</thead>
						<tbody>

                            <% products.forEach(item => { %>
							<tr>
								
								<td>
									<img src='<%= item.image %>' alt="item photo " style="height: 60px; width: 60px;" >
								</td>

								<td>
									<h1> <%= item.name %></h1>
								</td>

								<td> <h1> <%= item.qty %> </h1> </td>
								<td><span class="status completed">N <%= item.price %></span></td>
								 
					  
							</tr>
                            
                            <% }) %>

						</tbody>
					</table>





				</div>


                <% } else { %>
                    <h1> No Suite in available</h1>  
                    <% } %>




			<!-- 	<div class="todo">
					<div class="head">
						<h3> Other Categories</h3>
						<i class='bx bx-plus' ></i>
						<i class='bx bx-filter' ></i>
					</div>

				 
				</div> -->
			</div>
		</main>
		<!-- MAIN -->

	 


	 
	</section>
	<!-- CONTENT -->
	


	<script src="/scripts/dashboard.js"></script>
</body>
<%- include('./partials/footer'); -%>
</html> 
