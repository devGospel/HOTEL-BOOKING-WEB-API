<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title> Suite booked</title>
	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="css/dashboard.css">

	<link rel="shortcut icon" href="/assets/favicon.ico">
    <link rel="shortcut icon" type="x-icon" href="/assets/favicon.png">
    <link rel="apple-touch-icon"  href="/assets/favicon.png">
    <link rel="icon" sizes="192x192" href="/assets/favicon.png">

	
</head>
<body>


	<!-- SIDEBAR-->
	<section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bx-bed'></i>
			<span class="text">Suite details</span>
		</a>
		<ul class="side-menu top">
			<li class="active">
				<a href="#">
					<i class='bx bx-bed'></i>
					<span class="text">Suite</span>
				</a>
			</li>
			<li>
				<a href="#">  
					<i class='bx bxs-shopping-bag-alt' ></i>
					<span class="text">Other Suites</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-doughnut-chart' ></i>
					<span class="text">Team</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-message-dots' ></i>
					<span class="text">Message</span>
				</a>
			</li>
			<li>
				<a href="#">
					<i class='bx bxs-group' ></i>
					<span class="text">Chat admin</span>
				</a>
			</li>

			<form action="/logout" method="post">
				<li>
					<a href="/" class="logout">
						<i class='bx bxs-log-out-circle' ></i>
						<span class="text">Logout</span>
					</a>
				</li>
			</form

		</ul>
	 
	</section>
	<!-- SIDEBAR -->

	 



	<!-- CONTENT -->
	<section id="content" >
		<!-- NAVBAR -->
		<nav>

			<a href="/bookings" class="notification" style=" margin-top: 15px;"  >
                <p>Suite</p> 
				 
			</a>


			<i class='bx bx-menu' ></i>
			<p  class="nav-link">Categories</p>
			<%- include('./partials/search'); -%>

			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
	 
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN --> 
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Suite Booking</h1>
					<ul class="breadcrumb">
						<li>
							<p>Your Suite booked. View suite details and pay</p>
							 
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
				<a href="#" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text"> Download PDF </span>
				</a>
			</div>

			<% if (products) { %>

			<ul class="box-info">
			 
				<li>
					<i class='bx bxs-group' ></i>
					<span class="text" >
						<h3><%= totalQty %></h3>
						<h3 style="color: green; font-weight: 600;"> Rooms </h3>
					
					</span>
				</li>
				<li>
					<i class='bx bxs-dollar-circle' ></i>
					<span class="text">
						<h3><%= nights %></h3>
						<h3 style="font-weight: 600;"> Days booked</h3>
					</span>
					

				</li>
				<li>
					<i class='bx bxs-dollar-circle' ></i>
					<span class="text">
						<h3>N <%= totalPrice %></h3>
						<h3 style="color: red; font-weight: 600;">Total amount</h3>
					</span>
					

				</li>
				
				<a href="/checkout"> <button class="btnLogin-popup"> Pay now </button></a>

				<form action="/cancelBooking" method="post">
				<button type="submit" class="btnLogin-popup" style="background:red"> Cancel </button>
				</form>
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Recent bookings</h3>
						<i class='bx bx-search' ></i>
						<i class='bx bx-filter' ></i>
					</div>
					<table>
						<thead>
							<tr>
								<th>User</th>
								<th>Date Order</th>
								<th>Status</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>
									<img src="img/people.png">
									<p>John Doe</p>
								</td>
								<td>01-10-2021</td>
								<td><span class="status completed">Completed</span></td>
							</tr>
							<tr>
								<td>
									<img src="img/people.png">
									<p>John Doe</p>
								</td>
								<td>01-10-2021</td>
								<td><span class="status pending">Pending</span></td>
							</tr>
							<tr>
								<td>
									<img src="img/people.png">
									<p>John Doe</p>
								</td>
								<td>01-10-2021</td>
								<td><span class="status process">Process</span></td>
							</tr>
							<tr>
								<td>
									<img src="img/people.png">
									<p>John Doe</p>
								</td>
								<td>01-10-2021</td>
								<td><span class="status pending">Pending</span></td>
							</tr>
							<tr>
								<td>
									<img src="img/people.png">
									<p>John Doe</p>
								</td>
								<td>01-10-2021</td>
								<td><span class="status completed">Completed</span></td>
							</tr>
						</tbody>
					</table>
				</div>
  
             
           
				<div class="todo">
					<div class="head">
						<h1 style="color: #f66666;">Suite booked</h1>
						<i class='bx bx-plus' ></i>
						<i class='bx bx-filter' ></i>
					</div>           

                    <% products.forEach(item => { %>
						<ul class="todo-list">
						<li>  
                            <h1 style="color: #9c00ea;"> <%= item.name %> </h1>
							<p> <b> Room(s): <%= item.qty %> </b> </p>
							<p>  Price: N<%= item.price %></p>
							<i class='bx bx-dots-vertical-rounded' ></i>
				 
							<br>
						 
                        </li>
						</ul>
                    <% }) %>
							
						    
					       
                         
                            

							 <% } else { %>
                                <h1> No Suite booked</h1>  
                                <% } %>




			 

							</div>
                

				</div>              
		</main>
		<!-- MAIN -->

	 
	</section>
	<!-- CONTENT -->
	


	<script src="/scripts/dashboard.js"></script>
</body>
<%- include('./partials/footer'); -%>
</html> 
